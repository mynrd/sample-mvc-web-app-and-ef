@model WebAppSample.Models.UserModel
@{
    ViewBag.Title = "User Maintenance";
}

<h2>@ViewBag.Title</h2>
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                @Html.ValidationSummary(false)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Username, new { @class = "control-label col-md-4" })
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.Username, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4"></div>
            <div class="col-md-4"><input type="submit" class="btn btn-primary" value="Submit" /> <a href="@Url.Action("Index")" class="btn btn-info">Go to list</a></div>
        </div>
    </div>
}

